# ServiceNow MCP Server Configuration
# Copy this file to .env and fill in your credentials

# ServiceNow Instance URL (include https://)
SERVICENOW_INSTANCE=https://your-instance.service-now.com

# ServiceNow API Credentials
SERVICENOW_USERNAME=your-api-username
SERVICENOW_PASSWORD=your-api-password

# Optional: Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Optional: API Timeout (seconds)
API_TIMEOUT=30

# Optional: Max Retries for Failed Requests
MAX_RETRIES=3

# Optional: SSL Certificate Verification (set to false for dev instances with self-signed certs)
SERVICENOW_VERIFY_SSL=true
